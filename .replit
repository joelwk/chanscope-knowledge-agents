# The 'modules' key is deprecated. System dependencies are now managed in replit.nix.
# modules = ["python-3.11", "postgresql-16"]
hidden = [".pythonlibs", "replit.nix"]
# The primary run command for the development environment.
# It's recommended to run the `initialize` command from the Commands tab once, then use this Run command.
run = "python3 -m uvicorn api.app:app --host 0.0.0.0 --port 80 --log-level info --reload"
entrypoint = "api/app.py"

# =============================================
# Nix Configuration
# =============================================
[nix]
# The Nix channel to use. All package definitions are now in the replit.nix file.
channel = "stable-23_11"

# =============================================
# Environment Variables
# =============================================
[env]
REPLIT_ENV = "replit"
DEPLOYMENT_ENV = "replit"
API_PORT = "80"
API_HOST = "0.0.0.0"
LOG_LEVEL = "INFO"
AUTO_CHECK_DATA = "false" # Don't auto-check data on startup
FORCE_DATA_REFRESH = "false"
SKIP_EMBEDDINGS = "false"
PYTHONPATH = "${REPL_HOME}"
PYTHONUNBUFFERED = "1"

# Data Scheduler Configuration
ENABLE_DATA_SCHEDULER = "true"  # Enable automatic data updates
DATA_UPDATE_INTERVAL = "3600"   # Update interval in seconds (1 hour)
DATA_RETENTION_DAYS = "14"      # Keep data for 14 days

# Testing Configuration
TEST_MODE = "false"           # Default to false for deployment
USE_MOCK_DATA = "false"
USE_MOCK_EMBEDDINGS = "false"

# =============================================
# Deployment Configuration
# =============================================
[deployment]
# The build command runs once before the application starts.
build = "pip install -r requirements.txt"
# The run command for deployment. It's a simple, foreground process
# which is more robust for Replit's health checker.
run = ["python3", "-m", "uvicorn", "api.app:app", "--host", "0.0.0.0", "--port", "80", "--log-level", "info"]
deploymentTarget = "cloudrun"

# =============================================
# Health Check Configuration
# =============================================
[deployment.healthCheck]
path = "/"  # Changed from "/api/v1/health" to root path for simplest check
port = 80
initialDelay = 30  # Increased to give more time for full startup
timeout = 10       # Increased to allow for potential slow responses in Replit
period = 15        # Check every 15 seconds
consecutiveSuccesses = 1
consecutiveFailures = 5  # More tolerant of occasional failures

[[ports]]
localPort = 80
externalPort = 80

# =============================================
# Language Configuration
# =============================================
[languages]

[languages.python3]
pattern = "**/*.py"
syntax = "python"

[languages.python3.languageServer]
start = "pylsp"

# =============================================
# Package Manager Configuration
# =============================================
[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

# =============================================
# UPM Configuration
# =============================================
[unitTest]
language = "python3"

# =============================================
# Interpreter Configuration (DEPRECATED)
# =============================================
# This section is deprecated and no longer used by Replit.
# [interpreter]
# command = ["python3", "-u"]

[workflows]

[[workflows.workflow]]
name = "deploy"
mode = "sequential"
author = 38779469

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash deployment/setup.sh"

[[workflows.workflow]]
name = "test"
mode = "sequential"
author = 38779469

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash scripts/run_tests.sh --env=replit"

[[workflows.workflow]]
name = "Check DB"
mode = "sequential"
author = 38779469

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 scripts/check_replit_db.py"

[server]
host = "0.0.0.0"
port = 80

# Commands for Replit interface
[commands.test]
description = "Run tests in Replit environment"
command = "bash scripts/run_tests.sh --env=replit"

[commands.run-api]
description = "Run the API server"
command = "python3 -m uvicorn api.app:app --host 0.0.0.0 --port 80"

[commands.update-data]
description = "Run manual data update"
command = "python3 scripts/scheduled_update.py refresh"

[commands.check-db]
description = "Check Replit database connectivity"
command = "python3 scripts/check_replit_db.py"

[commands.initialize]
description = "Initialize Replit environment"
command = "bash scripts/replit_init.sh"

[commands.process-data]
description = "Process data stratification and embeddings"
command = "python3 scripts/process_data.py"

[commands.check-data-status]
description = "Check the status of data processing pipeline"
command = "python3 scripts/process_data.py --check"

[commands.force-data-refresh]
description = "Force a complete data refresh including stratification and embeddings"
command = "python3 scripts/process_data.py --force-refresh"

[commands.test-stratification]
description = "Test the stratification and embedding processes directly"
command = "python3 scripts/test_stratification.py"

[commands.test-stratification-only]
description = "Test only the stratification process"
command = "python3 scripts/test_stratification.py --stratification-only"

[commands.test-embeddings-only]
description = "Test only the embedding generation process"
command = "python3 scripts/test_stratification.py --embeddings-only"

# Scheduler Commands
[commands.scheduler-start]
description = "Start the data scheduler"
command = "python3 scripts/scheduled_update.py refresh --continuous --interval=3600"

[commands.scheduler-status]
description = "Check the status of the data scheduler"
command = "ps aux | grep scheduled_update.py"

[commands.scheduler-logs]
description = "View the scheduler logs"
command = "tail -n 50 logs/scheduler.log"

[replit]
bucket = "rolling-data"

[objectStorage]
defaultBucketID = "replit-objstore-05cbbe20-4215-4b30-a9e9-5d2d386b4ae7"