# =============================================
# Shared Configuration (All Environments)
# =============================================
# Environment & API Base Configuration
ENV=production
FASTAPI_ENV=production
FASTAPI_DEBUG=false
API_PORT=80
API_HOST=0.0.0.0
API_BASE_PATH=/api/v1
API_BASE_URL=http://localhost/api/v1
LOG_LEVEL=INFO


# Model Configuration
OPENAI_MODEL=gpt-4o
OPENAI_CHUNK_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_API_BASE=https://api.openai.com/v1
GROK_MODEL=grok-3-beta
GROK_CHUNK_MODEL=grok-2-1212
GROK_EMBEDDING_MODEL=not yet available
GROK_API_BASE=https://api.x.ai/v1
VENICE_MODEL=deepseek-r1-671b
VENICE_CHUNK_MODEL=deepseek-r1-671b
VENICE_API_BASE=https://api.venice.ai/api/v1
VENICE_CHARACTER_SLUG=venice

# Default Providers
DEFAULT_EMBEDDING_PROVIDER=openai
DEFAULT_CHUNK_PROVIDER=venice
DEFAULT_SUMMARY_PROVIDER=venice

# Shared Data Processing Settings
TIME_COLUMN=posted_date_time
STRATA_COLUMN=None
FREQ=H
# Set a specific date to filter from (overrides DATA_RETENTION_DAYS)
# Format: YYYY-MM-DD or ISO format
FILTER_DATE=2024-04-01
MAX_TOKENS=4096
DATA_RETENTION_DAYS=14
SAMPLE_SIZE=1000
INIT_WAIT_TIME=300
CLEAN_DATA_ON_START=true

# Data processing control
CHECK_EXISTING_DATA=true
AUTO_CHECK_DATA=true
FORCE_DATA_REFRESH=false
SKIP_EMBEDDINGS=false

# Feature Flags
CACHE_ENABLED=true
PADDING_ENABLED=false
CONTRACTION_MAPPING_ENABLED=false
NON_ALPHA_NUMERIC_ENABLED=false
ENABLE_REDIS=false
ENABLE_PROMETHEUS=false

# Redis Configuration (if needed)
REDIS_PORT=6379
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_DB=0

# Supervisor Configuration
SUPERVISOR_USER=admin
SUPERVISOR_PASSWORD=admin

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=chanscope-data
S3_BUCKET_PREFIX=data/
S3_BUCKET_PROCESSED=processed
S3_BUCKET_MODELS=models

# Testing Configuration
TEST_MODE=false
RUN_TESTS_ON_STARTUP=false
TEST_TYPE=all
AUTO_CHECK_DATA=true
ENABLE_DATA_SCHEDULER=true
DATA_UPDATE_INTERVAL=3600
SKIP_DATA_UPDATE=false
FORCE_DATA_REFRESH=false
USE_MOCK_DATA=false
USE_MOCK_EMBEDDINGS=false

# =============================================
# Environment-Specific Configuration (Docker)
# =============================================
[docker]
DOCKER_ENV=false
API_WORKERS=4
PROCESSING_CHUNK_SIZE=25000
EMBEDDING_BATCH_SIZE=25
CHUNK_BATCH_SIZE=25
MAX_WORKERS=4
ROOT_DATA_PATH=/app/data
STRATIFIED_PATH=/app/data/stratified
PATH_TEMP=/app/temp_files
MOCK_DATA_PATH=/app/data/mock

# =============================================
# Replit Configuration
# =============================================
[replit]
REPLIT_ENV=replit
DOCKER_ENV=false
API_WORKERS=3
PROCESSING_CHUNK_SIZE=10000
EMBEDDING_BATCH_SIZE=25
CHUNK_BATCH_SIZE=25
MAX_WORKERS=4
ROOT_DATA_PATH=data
STRATIFIED_PATH=data/stratified
PATH_TEMP=temp_files
MOCK_DATA_PATH=data/mock
# Set a specific date to filter from (overrides DATA_RETENTION_DAYS)
FILTER_DATE=2024-04-01
CHECK_EXISTING_DATA=true
AUTO_CHECK_DATA=true
FORCE_DATA_REFRESH=false
SKIP_EMBEDDINGS=false

# =============================================
# Local Development Configuration
# =============================================
[local]
DOCKER_ENV=false
API_WORKERS=2