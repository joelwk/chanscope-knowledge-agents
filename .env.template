# Required API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys
GROK_API_KEY=your_grok_api_key_here_optional
VENICE_API_KEY=your_venice_api_key_here_optional

# Model Settings
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
GROK_MODEL=grok-2-1212
GROK_EMBEDDING_MODEL=grok-v1-embedding
VENICE_MODEL=llama-3.1-405b
VENICE_CHUNK_MODEL=dolphin-2.9.2-qwen2-72b

# Default Provider Settings
DEFAULT_EMBEDDING_PROVIDER=openai
DEFAULT_CHUNK_PROVIDER=openai
DEFAULT_SUMMARY_PROVIDER=openai

# Application Settings
# Note: These values are optimized differently for Replit environment
EMBEDDING_BATCH_SIZE=2000
CHUNK_BATCH_SIZE=100
SUMMARY_BATCH_SIZE=100
CHUNK_SIZE=500
SAMPLE_SIZE=1500
FILTER_DATE=2025-01-18
MAX_TOKENS=4096
CACHE_ENABLED=true
LOG_LEVEL=INFO
MAX_WORKERS=4

# Development Settings
QUART_APP=api.app
QUART_ENV=development
QUART_DEBUG=1

# Data Paths
# Note: In Replit these paths may be adjusted automatically
FILE_TYPE=csv
API_HOST=0.0.0.0
API_PORT=5000

# AWS Configuration (Optional - for data gathering)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=your_s3_bucket_name
S3_BUCKET_PREFIX=data/
S3_BUCKET_PROCESSED=processed
S3_BUCKET_MODELS=models

# Data Processing Settings
TIME_COLUMN=posted_date_time
FREQ=H
PADDING_ENABLED=false
CONTRACTION_MAPPING_ENABLED=false
NON_ALPHA_NUMERIC_ENABLED=false

